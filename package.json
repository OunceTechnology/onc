{
  "name": "@ounce/onc",
  "version": "2.2.0",
  "description": "Ounce utilities",
  "main": "dist/onc.esm.js",
  "module": "src/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "build:rollup": "BROWSERSLIST_ENV=defaults rollup --config rollup.config.js",
    "build:rollup:evergreen": "BROWSERSLIST_ENV=evergreen rollup --config rollup.config.js",
    "develop": "webpack --mode development",
    "build": "npm version patch && cross-env NODE_ENV=production webpack --mode production",
    "build:minor": "npm version minor && cross-env NODE_ENV=production webpack --mode production",
    "tsc": "del  -f ./types/* && tsc --noEmit false --emitDeclarationOnly true"
  },
  "repository": {
    "type": "git",
    "url": "https://git.ouncetech.co.uk/Ounce/onc.git"
  },
  "keywords": [
    "utilities"
  ],
  "author": "philip",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/plugin-external-helpers": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/plugin-proposal-partial-application": "^7.18.9",
    "@babel/plugin-proposal-pipeline-operator": "^7.18.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.18.9",
    "@rollup/plugin-auto-install": "^2.2.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.24.1",
    "cross-env": "^7.0.3",
    "del": "^7.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "prettier": "^2.7.1",
    "rollup": "^2.77.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "browserslist": {
    "defaults": [
      "last 2 versions",
      "Safari >= 11",
      "iOS >= 11",
      "not ie <= 10",
      "> 1%"
    ],
    "evergreen": [
      "last 2 Chrome versions",
      "last 2 ChromeAndroid versions",
      "last 2 Firefox versions",
      "last 2 FirefoxAndroid versions",
      "last 2 Safari versions",
      "last 2 iOS versions",
      "last 2 Edge versions",
      "last 2 Opera versions"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-else-return": 1,
      "prefer-const": "error",
      "no-var": "error",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "no-nested-ternary": "off",
      "unicorn/no-nested-ternary": [
        "off"
      ],
      "unicorn/number-literal-case": [
        "off"
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "props": false
          },
          "allowList": {
            "i18n": true
          }
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
